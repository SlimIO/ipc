{
    "name": "@slimio/ipc",
    "version": "0.1.0",
    "description": "Node.js Inter Process Communication",
    "main": "index.js",
    "scripts": {
        "prepublishOnly": "pkg-ok",
        "test": "ava --verbose test/test-*.js",
        "doc": "jsdoc -c ./jsdoc.json -r -R ./README.md -P ./package.json --verbose",
        "coverage": "nyc npm test",
        "report": "nyc report --reporter=html"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SlimIO/ipc.git"
    },
    "keywords": [
        "SlimIO",
        "monitoring"
    ],
    "author": "SlimIO",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/SlimIO/ipc/issues"
    },
    "homepage": "https://github.com/SlimIO/ipc#readme",
    "dependencies": {
        "@slimio/is": "^1.4.0",
        "@slimio/safe-emitter": "^1.0.5"
    },
    "devDependencies": {
        "@commitlint/cli": "^7.2.1",
        "@commitlint/config-conventional": "^7.1.2",
        "@escommunity/minami": "^1.0.0",
        "@slimio/eslint-config": "^2.0.3",
        "@types/node": "^10.12.18",
        "ava": "^1.0.1",
        "cross-env": "^5.2.0",
        "eslint": "^5.11.1",
        "husky": "^1.3.1",
        "jsdoc": "^3.5.5",
        "nyc": "^13.1.0",
        "pkg-ok": "^2.3.1"
    },
    "engines": {
        "node": ">=10"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "nyc": {
        "check-coverage": true,
        "per-file": false,
